@model string

@{
    var attributes = new Dictionary<string, object>();
    attributes.Add("type", "email");
    if (ViewData != null)
    {
        foreach (var key in ViewData.Keys)
        {
            attributes.Add(key, ViewData[key]);
        }
    }
}

@Html.TextBox("", ViewData == null ? null : ViewData.TemplateInfo.FormattedModelValue, attributes)