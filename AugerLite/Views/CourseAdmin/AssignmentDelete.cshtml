@model Auger.Models.Data.Assignment

@{
    ViewBag.Title = "Delete Assignment";
}

@section Breadcrumbs {
<li><a href="~/">Auger Home</a>
<li><a href="~/CourseAdmin">Manage Courses</a>
<li><a href="~/CourseAdmin/CourseDetails/@Model.CourseId">@Model.Course.CourseLabel</a>
<li><a href="~/CourseAdmin/AssignmentDetails/@Model.CourseId/@Model.AssignmentId">@Model.AssignmentName</a>
<li>Delete Assignment
}

<h2>Delete Assignment</h2>

<div class="col-lg-4 col-lg-offset-4 col-sm-6 col-sm-offset-3">
  <div class="panel panel-warning">
    <div class="panel-heading"><h4>Are you sure you want to delete this?</h4></div>
    <div class="panel-body">
      <dl class="dl-horizontal">
        <dt>
          @Html.DisplayNameFor(model => model.AssignmentName)
        </dt>
        <dd>
          @Html.DisplayFor(model => model.AssignmentName)
        </dd>

        <dt>
          @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
        <dd>
          @Html.DisplayFor(model => model.DateCreated)
        </dd>
      </dl>
    </div>
    <div class="panel-footer text-right">
      @using (Html.BeginForm())
      {
        @Html.AntiForgeryToken()
        <input type="submit" value="Delete" class="btn btn-warning" />
        <a href="~/CourseAdmin/AssignmentDetails/@Model.CourseId/@Model.AssignmentId" class="btn btn-default" role="button">Cancel</a>
      }
    </div>
  </div>

</div>
